<?xml version='1.0' encoding='utf-8'?>
<widget id="com.thisisunfinished.changmymind" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Change My Mind</name>
    <description>
        Change my mind app.
    </description>
    <author email="joshmelville@gmail.com" href="http://thisisunfinished.com">
        Joshua Melville
    </author>
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="10000" />
    <preference name="FadeSplashScreen" value="true" />
    <preference name="FadeSplashScreenDuration" value="1.0" />
    <preference name="orientation" value="default" />
    <preference name="stay-in-webview" value="false" />
    <preference name="AllowInlineMediaPlayback" value="true" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="BackupWebStorage" value="local" />
    <preference name="exit-on-suspend" value="true" />
    <icon src="res/icon.png" />

    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <!-- iOS 8.0+ -->
          <!-- iPhone 6 Plus  -->
          <icon src="res/icon-60@3x.png" width="180" height="180" />
          <!-- iOS 7.0+ -->
          <!-- iPhone / iPod Touch  -->
          <icon src="res/icon-60.png" width="60" height="60" />
          <icon src="res/icon-60@2x.png" width="120" height="120" />
          <!-- iPad -->
          <icon src="res/icon-76.png" width="76" height="76" />
          <icon src="res/icon-76@2x.png" width="152" height="152" />
          <!-- iOS 6.1 -->
          <!-- Spotlight Icon -->
          <icon src="res/icon-40.png" width="40" height="40" />
          <icon src="res/icon-40@2x.png" width="80" height="80" />
          <!-- iPhone / iPod Touch -->
          <icon src="res/icon.png" width="57" height="57" />
          <icon src="res/icon@2x.png" width="114" height="114" />
          <!-- iPad -->
          <icon src="res/icon-72.png" width="72" height="72" />
          <icon src="res/icon-72@2x.png" width="144" height="144" />
          <!-- iPhone Spotlight and Settings Icon -->
          <icon src="res/icon-small.png" width="29" height="29" />
          <icon src="res/icon-small@2x.png" width="58" height="58" />
          <!-- iPad Spotlight and Settings Icon -->
          <icon src="res/icon-50.png" width="50" height="50" />
          <icon src="res/icon-50@2x.png" width="100" height="100" />
    </platform>
</widget>
